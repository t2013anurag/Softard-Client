<style>
.nav-li>li>a {
    position: relative;
    display: block;
    padding: 10px 44px;
}
.nav-tabs {
      margin-left: -63px;
}
.table {
      border: 2px solid #ddd;
}
.table>tbody>tr>td{
  padding: 11px;
}
.glyphicon {
  margin-right: 10px;
}
.badge {
  margin-left: 10px;
}
.table>thead>tr>th {
  text-align: center;
  padding: 3px;
  font-size: 19px;
  background: #ddd;
  color: #777;
}
.post-content {
  margin-top: 40px;
  padding: 10px;
  border: 2px solid #ddd;
}
</style>

<div class="container">
  <% if(req.session.authenticated) {%>
  <% if(post_list.length > 0) {  %>
  <% var count= 0; var counter = 0 %>
  <% _.each(post_list, function(post){ %>
    <div class="two column">
        <table class="table">
          <thead>
              <tr>
                <th><%= post.title %></th>
              </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <a href = "<%= post.title%>/view" ><span class="glyphicon glyphicon-file"></span>View</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href = "<%= post.title%>/edit" ><span class="glyphicon glyphicon-pencil"></span>Edit</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href = "<%= post.title%>/delete" ><span class="glyphicon glyphicon-remove"></span>Delete</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              </td>
            </tr>
          </tbody>
        </table>
    </div>
    <% }); %>
    <% } else { %>
      <div class="two column">
          <table class="table">
            <thead>
                <tr>
                  <th>It's lonely in here</th>
                </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <a href = "/create-post" ><span class="glyphicon glyphicon-file"></span>Create your first post</a>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
      <% } %>
<% } else { %>
  <div class="two column">
      <table class="table">
        <thead>
            <tr>
              <th>It's lonely in here</th>
            </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div class="alert alert-danger" data-toggle = "modal" data-target="#loginModal" id="error-msg" style="cursor:pointer">
                <strong>OOPS!</strong> Please login or signup before creating the post.
              </div>
            </td>
          </tr>
        </tbody>
      </table>
  </div>
<% } %>
    <div class="one column" style="position: absolute;left: 63%;width: 25%;">
      <table class="table table-hover">
        <thead>
            <tr>
              <th>Love Brownies?</th>
            </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <span class="glyphicon glyphicon-hand-right"></span>You can directly edit you post by clicking on it. <br><br>
              <span class="glyphicon glyphicon-hand-right"></span>Sharing is caring. Share your post on social feeds in a click.<br><br>
              <span class="glyphicon glyphicon-hand-right"></span>Developers Hall of Fame. Let's see if you can make it to the list.<br><br>
              <span class="glyphicon glyphicon-hand-right"></span>Lines don't matter.<br><br>
              <span class="glyphicon glyphicon-hand-right"></span>Add suitable tags to make your work visible to more and more developers. <br><br>
              <span class="glyphicon glyphicon-hand-right"></span>Raise issues, questions if you have any. <br><br>
              <span class="glyphicon glyphicon-hand-right"></span>Answering queries boosts your progress. <br><br>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
