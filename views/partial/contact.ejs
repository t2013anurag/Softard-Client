<div class="container">
  <div class="two column">
    <h3>Got any queries?</h3>
    <form action="/register/complain" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <% if(req.session.authenticated) {%>
        <input type="text" class="form-control" id="name" name="name" value=<%= req.session.User.name %>>
        <% } else { %>
        <input type="text" class="form-control" id="name" name="name" placeholder="Your name">
          <% } %>
      </div>
      <div class="form-group">
        <label for="email">Email address</label>
        <% if(req.session.authenticated) {%>
        <input type="email" class="form-control" id="email" name="email" value=<%= req.session.User.email %>>
        <% } else { %>
        <input type="email" class="form-control" id="email" name="email" placeholder="Your email">
          <% } %>
      </div>
      <div class="form-group">
        <label for="password">Your question</label>
        <textarea class="form-control" id="query" name="query" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
  <div class="one column">
  </div>
</div>
