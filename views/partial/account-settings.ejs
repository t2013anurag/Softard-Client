<% if(req.session.authenticated) { %>

  <table class="table">
    <thead>
        <tr>
          <th>Account Details</th>
        </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <div class="form-group">
            <label for="changepassword">Change Password</label>
            <input type="password" class="form-control" id="user-password" name="user-password" placeholder="Old Password">
          </div>
          <div class="form-group">
            <label for="newpassword">New Password</label>
            <input type="password" class="form-control" id="user-newpassword" name="user-newpassword" placeholder="New Password">
          </div>
          <div class="form-group">
            <label for="confirmpassword">Confirm New Password</label>
            <input type="password" class="form-control" id="user-cpassword" name="user-cpassword" placeholder="Confirm Password">
          </div>
          <button type="submit" class="btn btn-default complain-btn" id="change-password">Change Password</button>
          <div class="alert alert-warning" id="password-tip">
            <strong>Tip </strong> Change your password once in every three months.
          </div>
          <div class="alert alert-success" id="success-msg" style="display:none">
            <strong>Voila!</strong> We have successfully updated your password.
          </div>
          <div class="alert alert-danger" id="error-msg" style="display:none">
            <strong>OOPS!</strong> We are facing some technical difficulties. Please try again after some time.
          </div>
          <div class="alert alert-danger" id="error-nofill" style="display:none">
            <strong>Oops! </strong> Please fill all the fields.
          </div>
          <div class="alert alert-danger" id="password-mismtach-error" style="display:none">
            <strong>Oops! </strong> New Password and Confirm Password don't match.
          </div>
          <div class="alert alert-danger" id="same-password-error" style="display:none">
            <strong>Oops! </strong> Old and New Passwords cannot be same.
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="divider-border"></div>

