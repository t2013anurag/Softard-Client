<style>
.form-control {
  width: 80%;
}
.complain-btn {
  margin-bottom: 10px;
}
.btn-login-sub {
  margin-left: 30%;
  width: 45%;
  height: 47px;
}
.user-avatar img{
  height: 100px;
  width: 100px;
  margin-bottom: 24px;
}
.btn-upload {
  margin-left: 135px;
  margin-top: -86px;
  margin-bottom: 48px;
  width: 36%;
}
</style>
<% if(req.session.authenticated) { %>

  <table class="table">
    <thead>
        <tr>
          <th>Public Profile</th>
        </tr>
    </thead>
    <tbody>
      <tr>
        <td>
              <div class = "user-avatar">
                <img src= "<%= req.session.User.avatar%>">
                <div class= "upload-picture">
                  <form action="file/upload" method="post" enctype="multipart/form-data">
                      <input type="file" name="avatar" class="btn btn-primary btn-upload"/>
                      <input type="submit" value="Upload Photo" class="btn btn-warning">
                  </form>
                </div>
              </div>
              <div class="form-group">
                <label for="name">Name</label>
                <% if(req.session.authenticated && req,session.User.name) {%>
                <input type="text" class="form-control" id="user-name" name="user-name" value=<%= req.session.User.name %>>
                <% } else { %>
                <input type="text" class="form-control" id="user-name" name="user-name" placeholder="Your name">
                  <% } %>
              </div>
              <div class="form-group">
                <label for="email">Email address</label>
                <% if(req.session.authenticated && req.session.User.email) {%>
                <input type="email" class="form-control" id="user-email" name="user-email" value=<%= req.session.User.email %>>
                <% } else { %>
                <input type="email" class="form-control" id="user-email" name="user-email" placeholder="Your email">
                  <% } %>
              </div>
              <div class="form-group">
                <label for="website">Website</label>
                <% if(req.session.authenticated && req.session.User.website) {%>
                <input type="text" class="form-control" id="user-website" name="user-website" value=<%= req.session.User.website %>>
                <% } else { %>
                <input type="text" class="form-control" id="user-website" name="user-website" placeholder="Your website">
                  <% } %>
              </div>
              <div class="form-group">
                <label for="mobile">Mobile No.</label>
                <% if(req.session.authenticated && req.session.User.mobile) {%>
                <input type="text" class="form-control" id="user-mobile" name="user-mobile" value=<%= req.session.User.mobile %>>
                <% } else { %>
                <input type="text" class="form-control" id="user-mobile" name="user-mobile" placeholder="Your mobile">
                  <% } %>
              </div>
              <div class="form-group">
                <label for="profession">Profession</label>
                <% if(req.session.authenticated && req.session.User.profession) {%>
                <input type="text" class="form-control" id="user-profession" name="user-profession" value=<%= req.session.User.profession %>>
                <% } else { %>
                <input type="text" class="form-control" id="user-profession" name="user-profession" placeholder="Your profession">
                  <% } %>
              </div>
              <div class="form-group">
                  <label for="about">About you</label>
                  <% if(req.session.authenticated && req.session.User.about) {%>
                <textarea class="form-control" id="user-about" name="user-about" rows="5"><%=req.session.User.about %></textarea>
                <% } else { %>
                <textarea class="form-control" id="user-about" name="user-about" rows="5"  placeholder="Tell us something about yourself"></textarea>
                <% } %>
              </div>
              <button type="submit" class="btn btn-default complain-btn" id="send-complain">Submit</button>
              <div class="alert alert-success" id="success-msg" style="display:none">
                <strong>Voila!</strong> We have successfully updated your profile.
              </div>
              <div class="alert alert-danger" id="error-msg" style="display:none">
                <strong>OOPS!</strong> We are facing some technical difficulties. Please try again after some time.
              </div></td>
      </tr>
    </tbody>
  </table>
  <div class="divider-border"></div>

    <!-- <div class="bug-report">
      <h3>Found a Bug?</h3>
        <h4>Mail us  <span style="color:red">bug@softard.com</span></h4>
        <br><br><br>
        <p>If your query is not yet resolved mail us : <span style="color:blue">help@softard.com.</span>We will make sure someone gets back to you in 24 hours.</p>
    </div> -->

<% } else { %>
  <div class="alert alert-danger" id="error-msg">
    <strong>OOPS! </strong>Your session expired. Please login again.
  </div>
  <button type="button" class="btn btn-primary btn-login-sub" data-toggle = "modal" data-target="#loginModal">Login</button>
  <% } %>
